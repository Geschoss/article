{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es6", "es2018.promise", "es2017"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
